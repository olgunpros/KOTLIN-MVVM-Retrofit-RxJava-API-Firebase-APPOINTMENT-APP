<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="117dp"
        android:layout_height="108dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="18dp"
        android:src="@android:color/holo_purple"
        android:layout_gravity="center"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/listeledoktorText"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:text="Doctor Name"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/listelehastaneText"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:text="Hospital Name"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="47dp" />

    <TextView
        android:id="@+id/listelebolumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="Bolum Name"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/listeletarihText"
        app:layout_constraintTop_toBottomOf="@+id/listelehastaneText"
        tools:layout_editor_absoluteX="133dp" />

    <TextView
        android:id="@+id/listeletarihText"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Date"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="106dp" />



</LinearLayout>
